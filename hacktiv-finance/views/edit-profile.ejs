<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <%- include('./link/style.ejs') %>
    <title>Home</title>
</head>
<body>
 <div class="wrapper">
    <%- include('./link/navbar-login.ejs') %>
    <section>
        <% if (!data.Profile) { %>
            <h3 style="color: red;"> Silahkan isi data diri terlebih dahulu</h3>
            <a href="/add-profile/<%= data.id %>"> Add Data Diri</a>
        <% } else { %>
            <div class="container" style="background-color: rgba(240, 248, 255, 0.55); padding: 30px; border-radius: 20px;">
                <form action="/profile/<%= data.id %>/edit" method="post">
                    <div class="mb-3">
                      <label for="name" class="form-label">Name</label>
                      <input type="text" class="form-control" name ="name" value="<%= data.Profile.name %>">
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Date</label>
                        <input type="text" class="form-control" name ="date" value="<%= data.Profile.date %>">
                      </div>                      
                      <div class="mb-3">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control" name ="address" value="<%= data.Profile.address %>">
                      </div>
                      <div class="mb-3">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="text" class="form-control" name ="phone" value="<%= data.Profile.phone %>">
                      </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            </div>
        <%} %>
    </section>
<script>
   
   function myMenuFunction() {
    var i = document.getElementById("navMenu");

    if(i.className === "nav-menu") {
        i.className += " responsive";
    } else {
        i.className = "nav-menu";
    }
   }
 
</script>
<%- include('./link/boostrap.ejs') %>
</body>
</html>