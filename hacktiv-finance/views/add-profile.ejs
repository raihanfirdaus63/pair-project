<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <%- include('./link/style.ejs') %>
    <title>Add Form</title>
</head>
<body>
 <div class="wrapper">
    <%- include('./link/navbar-login.ejs') %>
    <section class="container">
      <br>
      
      <div class="container" style="background-color: rgba(240, 248, 255, 0.55); padding: 30px; border-radius: 20px;">
        <form action="/add-profile/<%= data.id %>" method="post">
          <div class="mb-3">
              <label class="form-label">Name</label>
              <input type="text" class="form-control" name="name">
            </div>
            <div class="mb-3">
              <label class="form-label">Birth Of Date</label>
              <input type="date" class="form-control" name="birthOfDate">
            </div>
            <div class="mb-3">
              <label class="form-label">Address</label>
              <input type="text" class="form-control" name="address">
            </div>
            <div class="mb-3">
              <label class="form-label">Phone Number</label>
              <input type="number" class="form-control" name="phone">
            </div>
            <div class="mb-3">
              <label class="form-label">Payment method</label>
              <select class="form-select" name="payment">
                <option selected disabled>-- Choose your payment method --</option>
                <option value="bank-transfer">Bank Transfer</option>
                <option value="qris">QRIS</option>
                <option value="visa">Visa</option>
              </select>
            </div>
            <div class="mb-3">
              <input type="number" hidden class="form-control" name="UserId" value="<%= data.id %>">
            </div>
            <button type="subimt" class="btn btn-danger"> Submit</button>
      </form>
      </div>
    </section>
<script>
   
   function myMenuFunction() {
    var i = document.getElementById("navMenu");

    if(i.className === "nav-menu") {
        i.className += " responsive";
    } else {
        i.className = "nav-menu";
    }
   }
 
</script>
<%- include('./link/boostrap.ejs') %>
</body>
</html>